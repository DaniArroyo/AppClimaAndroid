<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:maxWidth="150sp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnEditarCiudad"
        app:layout_constraintEnd_toStartOf="@+id/btnEditarCiudad"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/btnBorrarCiudad"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="30dp"
        android:text="Borrar"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEditarCiudad"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_marginEnd="12dp"
        android:text="Editar"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnBorrarCiudad"
        app:layout_constraintEnd_toStartOf="@+id/btnBorrarCiudad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>