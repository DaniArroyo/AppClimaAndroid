<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200sp">

    <Button
        android:id="@+id/btnAlertDialogCancel"
        android:layout_width="127dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:text="Cancelar"
        app:layout_constraintEnd_toStartOf="@+id/btnAlertDialogUpdate"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateCiudad" />

    <Button
        android:id="@+id/btnAlertDialogUpdate"
        android:layout_width="133dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:layout_weight="1"
        android:text="Actualizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateCiudad" />

    <EditText
        android:id="@+id/editTextUpdateCiudad"
        android:layout_width="208dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Ciudad"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>